generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Language {
  id          BigInt       @id @default(autoincrement())
  name        String
  slug        String       @unique
  generations Generation[]

  @@map("languages")
}

model Generation {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  prompt      String
  code        String
  language_id BigInt
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  languages   Language @relation(fields: [language_id], references: [id], onDelete: Cascade)

  @@map("generations")
}
